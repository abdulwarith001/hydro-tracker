{
  "expo": {
    "name": "Hydro Tracker",
    "slug": "HydroTracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/favicon.png",
    "scheme": "hydrotracker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.enigmare.hydrotracker",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/icons/favicon.png",
        "backgroundImage": "./assets/icons/favicon.png",
        "monochromeImage": "./assets/icons/favicon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.enigmare.hydrotracker",
      "permissions": [
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/icons/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/favicon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#5DCCFC",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icons/favicon.png",
          "color": "#5DCCFC",
          "sounds": [],
          "androidMode": "default",
          "androidCollapsedTitle": "Stay Hydrated!"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
